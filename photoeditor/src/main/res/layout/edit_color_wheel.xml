<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
 <ImageView
	        android:id="@+id/bottom_yuan"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"     
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:background="@drawable/yuan"> 
		 </ImageView>  
		 
      <RelativeLayout
        android:id="@+id/camera_cheelview_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.cam001.widget.slider.cheelview
            android:id="@+id/camera_cheelview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        
        </RelativeLayout>
		 
         <ImageView
	        android:id="@+id/center_line"
	        android:layout_width="0dp"
	        android:layout_height="0dp"     
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:visibility="invisible"> 
		 </ImageView>  
		 
        <RelativeLayout
        android:id="@+id/deep_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="65dp"
	    android:layout_toLeftOf="@id/center_line">
		 
            <ImageButton
	        android:id="@+id/deep_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"     
	        android:background="@drawable/deep_select"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentBottom="true"> 
		 </ImageButton>  
		 
         <TextView
              android:id="@+id/deep_txt"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text="@string/deep_colour"
	        android:textSize="18sp"
	         android:textColor="@android:color/white"
	        android:layout_alignParentRight="true"
		    android:layout_alignParentBottom="true"
		     android:paddingBottom="25dp"
		    android:layout_marginRight="20dp" >
         </TextView>  
          </RelativeLayout>
          
       <RelativeLayout
        android:id="@+id/light_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
         android:layout_marginTop="65dp"
        android:layout_marginRight="65dp"
	    android:layout_toRightOf="@id/center_line">
		 
           <ImageButton
	        android:id="@+id/light_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"     
	        android:layout_alignParentBottom="true"
	        android:background="@drawable/btn_light_selector"> 
		 </ImageButton>  
		 
        <TextView
            android:id="@+id/light_txt"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text="@string/ligth_colour"
	        android:textSize="18sp"
	         android:textColor="#a5a5a5"
	        android:layout_alignParentLeft="true"
		    android:layout_alignParentBottom="true"
	         android:paddingBottom="25dp"
		    android:layout_marginLeft="20dp">
         </TextView>
      </RelativeLayout> 
</RelativeLayout>
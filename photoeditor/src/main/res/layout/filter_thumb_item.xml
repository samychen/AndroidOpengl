<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="85dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="6.66dp"
        android:id="@+id/img_filter_item_thumb"/>

    <ImageView
        android:id="@+id/color_item_image_focus1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.66dp"
        android:src="@drawable/filter_item_pressed"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_filter_item_thumb"
        android:layout_below="@+id/img_filter_item_thumb"
        android:textSize="12sp"
        android:textColor="@color/color_textview"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="L1"
        />
  </RelativeLayout>
</RelativeLayout>